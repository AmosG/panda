<% if (!query) { %>

    <p>Please enter a search query.</p>

<% } else if (datasets.meta.total_count == 0) { %>

    <p>No rows matching query "<%= query %>" found in any dataset.</p>

<% } else { %>

<h2>Found <%= datasets.meta.total_count %> dataset<% if (datasets.meta.total_count > 1) { %>s<% } %> with matching rows</h2>

<%= pager %>

<% _.each(datasets.datasets, function(dataset) { %>
    <h3><a href="#dataset/<%= dataset.slug %>"><%= dataset.name %></a></h3>

    <% if (dataset.description) { %>
    <p><em><%= dataset.description %></em><br /></p>
    <% } %>

    <h3>
        <%= dataset.meta.total_count %> matching row<% if (dataset.meta.total_count > 1) { %>s<% } %> (<%= dataset.row_count %> total rows)
    </h3>

    <table>
        <tr>
            <% _.each(dataset.schema, function(s) { %>
            <th><%= s.column %></th>
            <% }); %>
        </tr>

        <% _.each(dataset.data, function(d) { %>
        <tr>
            <% _.each(d.data, function(datum) { %>
            <td><%= datum %></td>
            <% }); %>
        </tr>
        <% }); %>
    </table>

    <% if (dataset.meta.next) { %>
    <p><a class="scroll-up" href="#dataset/<%= dataset.slug %>/search/<%= query %>/<%= settings.PANDA_DEFAULT_SEARCH_ROWS %>/1">View more results from this dataset &raquo;</a></p>
    <% } %>
<% }); %>

<%= pager %>

<% } %>
