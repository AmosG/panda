<form id="dataset-search-form" class="form-stacked">
    <div class="alert-message"></div>
    <fieldset>
        <legend>Search <strong><%= dataset.name %></strong></legend>
        <div class="clearfix">
            <div class="input">
            <% if (!dataset.row_count) { %>
                <input id="dataset-search-query" type="text" name="query" class="span11" value="Dataset not yet available for search" disabled="disabled" />
                <input type="submit" id="dataset-search-submit" class="btn primary" value="Search" disabled="disabled" />
            <% } else { %>
                <input id="dataset-search-query" type="text" name="query" class="span11" value="<%= query %>" placeholder="Enter a search query" />
                <input type="submit" id="dataset-search-submit" class="btn primary" value="Search" />
                &nbsp;<a data-content="<%= search_help_text %>" data-original-title="Advanced searching" data-offset="10" data-html="true" data-placement="below" href="javascript: return false;" rel="popover">Advanced</a>
                <% if (query) { %>
                &nbsp;<a href="#dataset/<%= dataset.slug %>">Back to dataset details</a>
                <% } %>
            <% } %>
            </div>
        </div>
    </fieldset>
</form>

<div id="dataset-search-results">
</div>
